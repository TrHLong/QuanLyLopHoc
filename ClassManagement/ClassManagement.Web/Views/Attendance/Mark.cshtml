@model ClassManagement.Web.Controllers.MarkAttendanceViewModel
@using ClassManagement.Application.DTOs

@{
    ViewData["Title"] = "Điểm danh";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-check me-2"></i>Điểm danh lớp học
                    </h4>
                    <p class="mb-0 mt-2">
                        <i class="fas fa-info-circle me-1"></i>
                        @Model.CourseName - @Model.Date.ToString("dd/MM/yyyy")
                    </p>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Mark" method="post">
                        <input type="hidden" asp-for="CourseId" />
                        <input type="hidden" asp-for="Date" />
                        <input type="hidden" asp-for="TimeSlot" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-calendar me-2"></i>Thông tin buổi học</h6>
                                        <p class="mb-1"><strong>Lớp:</strong> @Model.CourseName</p>
                                        <p class="mb-1"><strong>Ngày:</strong> @Model.Date.ToString("dd/MM/yyyy")</p>
                                        <p class="mb-0"><strong>Ca học:</strong> @(Model.TimeSlot == ClassManagement.Domain.Enums.TimeSlot.Slot1 ? "14:00-16:00" : "17:00-19:00")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-clock me-2"></i>Thời gian hiện tại</h6>
                                        <p class="mb-1"><strong>Ngày:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                                        <p class="mb-0"><strong>Giờ:</strong> @DateTime.Now.ToString("HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.Students.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Họ tên</th>
                                            <th>Email</th>
                                            <th>Trạng thái điểm danh</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Students.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-user-circle fa-2x text-primary me-2"></i>
                                                        <strong>@Model.Students[i].StudentName</strong>
                                                    </div>
                                                </td>
                                                <td>@Model.Students[i].StudentEmail</td>
                                                <td>
                                                    <input type="hidden" asp-for="Students[i].StudentId" />
                                                    <select asp-for="Students[i].Status" class="form-select">
                                                        <option value="1">Có mặt</option>
                                                        <option value="2">Vắng mặt</option>
                                                        <option value="3">Đi muộn</option>
                                                        <option value="4">Có phép</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-action="Index" asp-controller="Course" class="btn btn-secondary me-md-2">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Lưu điểm danh
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có học viên nào</h5>
                                <p class="text-muted">Lớp học này chưa có học viên đăng ký hoặc chưa được duyệt</p>
                                <a asp-action="Index" asp-controller="Course" class="btn btn-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách lớp
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-select "Có mặt" cho tất cả học viên
        document.addEventListener('DOMContentLoaded', function() {
            const selects = document.querySelectorAll('select[name*="Status"]');
            selects.forEach(select => {
                select.value = '1'; // Present
            });
        });

        // Confirm before submit
        document.querySelector('form').addEventListener('submit', function(e) {
            const absentCount = document.querySelectorAll('select[name*="Status"] option:checked[value="2"]').length;
            const lateCount = document.querySelectorAll('select[name*="Status"] option:checked[value="3"]').length;
            
            if (absentCount > 0 || lateCount > 0) {
                const message = `Bạn đang điểm danh:\n- Vắng mặt: ${absentCount} học viên\n- Đi muộn: ${lateCount} học viên\n\nBạn có chắc chắn muốn lưu?`;
                if (!confirm(message)) {
                    e.preventDefault();
                }
            }
        });
    </script>
}
