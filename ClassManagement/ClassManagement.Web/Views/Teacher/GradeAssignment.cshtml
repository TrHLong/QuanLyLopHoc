@model List<ClassManagement.Application.DTOs.AssignmentSubmissionDto>
@{
    ViewData["Title"] = "Chấm điểm bài tập";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap me-2"></i>Chấm điểm bài tập
                    </h5>
                    <span class="badge bg-primary">@Model.Count bài nộp</span>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        @foreach (var submission in Model)
                        {
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">@submission.AssignmentTitle</h6>
                                    <div>
                                        @if (submission.IsLate)
                                        {
                                            <span class="badge bg-danger me-2">Nộp muộn</span>
                                        }
                                        @if (submission.IsGraded)
                                        {
                                            <span class="badge bg-success">Đã chấm</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chưa chấm</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            @if (!string.IsNullOrEmpty(submission.TextAnswer))
                                            {
                                                <h6>Câu trả lời:</h6>
                                                <div class="border p-3 mb-3 bg-light">
                                                    @Html.Raw(submission.TextAnswer.Replace("\n", "<br>"))
                                                </div>
                                            }
                                            
                                            @if (!string.IsNullOrEmpty(submission.FileUrl))
                                            {
                                                <h6>File đính kèm:</h6>
                                                <a href="@submission.FileUrl" class="btn btn-outline-primary btn-sm" target="_blank">
                                                    <i class="fas fa-download me-1"></i>Tải file
                                                </a>
                                            }
                                            
                                            <div class="mt-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Nộp lúc: @submission.SubmittedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <form asp-action="GradeAssignment" method="post">
                                                <input type="hidden" name="SubmissionId" value="@submission.Id" />
                                                
                                                <div class="mb-3">
                                                    <label for="grade_@submission.Id" class="form-label">Điểm (0-10)</label>
                                                    <input type="number" id="grade_@submission.Id" name="Grade" 
                                                           class="form-control" min="0" max="10" step="0.1" 
                                                           value="@(submission.Grade?.ToString() ?? "")" required />
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label for="feedback_@submission.Id" class="form-label">Nhận xét</label>
                                                    <textarea id="feedback_@submission.Id" name="Feedback" 
                                                              class="form-control" rows="3" 
                                                              placeholder="Nhập nhận xét...">@submission.Feedback</textarea>
                                                </div>
                                                
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-save me-1"></i>Lưu điểm
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có bài nộp nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




