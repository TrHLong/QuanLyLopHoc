@model List<ClassManagement.Application.DTOs.AssignmentDto>
@{
    ViewData["Title"] = "Bài tập";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>Danh sách bài tập
                    </h5>
                    <span class="badge bg-primary">@Model.Count bài tập</span>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var assignment in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@assignment.Title</h6>
                                            @if (assignment.IsOverdue)
                                            {
                                                <span class="badge bg-danger">Quá hạn</span>
                                            }
                                            else if (assignment.IsDueSoon)
                                            {
                                                <span class="badge bg-warning">Sắp đến hạn</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Còn thời gian</span>
                                            }
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">@assignment.Description</p>
                                            <div class="mb-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    Hạn nộp: @assignment.DueDate.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                            @if (!string.IsNullOrEmpty(assignment.FileUrl))
                                            {
                                                <div class="mb-3">
                                                    <a href="@assignment.FileUrl" class="btn btn-outline-primary btn-sm" target="_blank">
                                                        <i class="fas fa-download me-1"></i>Tải file bài tập
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            @if (!assignment.IsOverdue)
                                            {
                                                <a asp-controller="Assignment" asp-action="Submit" asp-route-assignmentId="@assignment.Id" 
                                                   class="btn btn-primary btn-sm w-100">
                                                    <i class="fas fa-paper-plane me-1"></i>Nộp bài
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                                    <i class="fas fa-ban me-1"></i>Đã quá hạn
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có bài tập nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




