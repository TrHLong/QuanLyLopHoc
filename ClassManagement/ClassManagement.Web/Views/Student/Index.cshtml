@model List<ClassManagement.Application.DTOs.StudentDto>
@{
    ViewData["Title"] = "Danh sách học viên";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Danh sách học viên
                        </h5>
                        <p class="mb-0 mt-1">
                            <i class="fas fa-info-circle me-1"></i>
                            Danh sách học viên đã đăng ký lớp học: xem chi tiết, quản lý tham gia lớp
                        </p>
                    </div>
                    <span class="badge bg-light text-dark">@Model.Count học viên</span>
                </div>
                <div class="card-body">
                    <!-- Thông báo -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Họ tên</th>
                                        <th>Email</th>
                                        <th>Khối</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Lần đăng nhập cuối</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.FullName</td>
                                            <td>@student.Email</td>
                                            <td>
                                                <span class="badge bg-info">Khối @student.Grade</span>
                                            </td>
                                            <td>@student.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (student.LastLoginAt.HasValue)
                                                {
                                                    @student.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa đăng nhập</span>
                                                }
                                            </td>
                                            <td>
                                                @if (student.IsInactive)
                                                {
                                                    <span class="badge bg-warning">Không hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <!-- Kích hoạt/Vô hiệu hóa -->
                                                    @if (student.IsInactive)
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm" 
                                                                onclick="toggleStatus(@student.Id, '@student.FullName', true)">
                                                            <i class="fas fa-check me-1"></i>Kích hoạt
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-warning btn-sm" 
                                                                onclick="toggleStatus(@student.Id, '@student.FullName', false)">
                                                            <i class="fas fa-pause me-1"></i>Vô hiệu hóa
                                                        </button>
                                                    }
                                                    
                                                    <!-- Xem chi tiết -->
                                                    <button type="button" class="btn btn-info btn-sm" 
                                                            onclick="viewDetails(@student.Id, '@student.FullName')">
                                                        <i class="fas fa-eye me-1"></i>Chi tiết
                                                    </button>
                                                    
                                                    <!-- Xóa tài khoản -->
                                                    <button type="button" class="btn btn-danger btn-sm" 
                                                            onclick="confirmDelete(@student.Id, '@student.FullName')">
                                                        <i class="fas fa-trash me-1"></i>Xóa
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có học viên nào đăng ký lớp học</h5>
                            <p class="text-muted">Học viên sẽ xuất hiện ở đây sau khi đăng ký tham gia lớp học</p>
                            <a asp-controller="Course" asp-action="Registrations" class="btn btn-primary">
                                <i class="fas fa-list me-1"></i>Xem đăng ký lớp học
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Student Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user me-2"></i>Thông tin chi tiết học viên
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="studentDetails">
                <!-- Nội dung sẽ được load bằng AJAX -->
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Toggle Status Confirmation Modal -->
<div class="modal fade" id="toggleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="toggleModalTitle">Xác nhận thay đổi trạng thái</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="toggleModalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="toggleForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-primary" id="toggleSubmitBtn">
                        <i class="fas fa-check me-1"></i>Xác nhận
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa tài khoản <strong id="studentName"></strong>?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(studentId, studentName) {
            document.getElementById('studentName').textContent = studentName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + studentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function toggleStatus(studentId, studentName, activate) {
            const title = activate ? 'Kích hoạt tài khoản' : 'Vô hiệu hóa tài khoản';
            const message = activate 
                ? `Bạn có chắc muốn kích hoạt tài khoản <strong>${studentName}</strong>?`
                : `Bạn có chắc muốn vô hiệu hóa tài khoản <strong>${studentName}</strong>?`;
            
            document.getElementById('toggleModalTitle').textContent = title;
            document.getElementById('toggleModalMessage').innerHTML = message;
            document.getElementById('toggleForm').action = '@Url.Action("ToggleStatus")/' + studentId;
            
            const submitBtn = document.getElementById('toggleSubmitBtn');
            if (activate) {
                submitBtn.className = 'btn btn-success';
                submitBtn.innerHTML = '<i class="fas fa-check me-1"></i>Kích hoạt';
            } else {
                submitBtn.className = 'btn btn-warning';
                submitBtn.innerHTML = '<i class="fas fa-pause me-1"></i>Vô hiệu hóa';
            }
            
            new bootstrap.Modal(document.getElementById('toggleModal')).show();
        }

        function viewDetails(studentId, studentName) {
            // Load student details via AJAX
            fetch('@Url.Action("Details")/' + studentId)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('studentDetails').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('detailsModal')).show();
                })
                .catch(error => {
                    console.error('Error loading student details:', error);
                    document.getElementById('studentDetails').innerHTML = 
                        '<div class="alert alert-danger">Không thể tải thông tin học viên</div>';
                    new bootstrap.Modal(document.getElementById('detailsModal')).show();
                });
        }
    </script>
}

