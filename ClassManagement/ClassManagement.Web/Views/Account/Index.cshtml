@model ClassManagement.Domain.Entities.User
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Thông tin tài khoản
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Thông báo -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Thông tin tài khoản -->
                        <div class="col-md-6">
                            <h6><i class="fas fa-user me-2"></i>Thông tin tài khoản</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Họ tên:</strong></td>
                                    <td>@Model.FullName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td><strong>Vai trò:</strong></td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @(Model.Role == ClassManagement.Domain.Enums.UserRole.Teacher ? "Giáo viên" : "Học viên")
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Không hoạt động</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo:</strong></td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Lần đăng nhập cuối:</strong></td>
                                    <td>
                                        @if (Model.LastLoginAt.HasValue)
                                        {
                                            @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa đăng nhập</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Thống kê -->
                        <div class="col-md-6">
                            <h6><i class="fas fa-chart-bar me-2"></i>Thống kê</h6>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-primary">@((DateTime.UtcNow - Model.CreatedAt).Days)</h5>
                                            <p class="card-text">Ngày hoạt động</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h5 class="card-title @(Model.IsActive ? "text-success" : "text-warning")">
                                                @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
                                            </h5>
                                            <p class="card-text">Trạng thái</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Các thao tác -->
                    <div class="mt-4">
                        <h6><i class="fas fa-tools me-2"></i>Các thao tác</h6>
                        <div class="row justify-content-center">
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="fas fa-key fa-2x text-warning mb-3"></i>
                                        <h6>Đổi mật khẩu</h6>
                                        <p class="text-muted small">Thay đổi mật khẩu hiện tại</p>
                                        <a asp-action="ChangePassword" class="btn btn-warning btn-sm">
                                            <i class="fas fa-key me-1"></i>Đổi mật khẩu
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Thông tin bổ sung -->
                        <div class="alert alert-info mt-4">
                            <h6><i class="fas fa-info-circle me-2"></i>Thông tin:</h6>
                            <p class="mb-0">
                                Để quản lý tài khoản học viên (xóa, khóa, mở), vui lòng truy cập 
                                <a asp-controller="Student" asp-action="Index" class="alert-link">trang Quản lý học viên</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

