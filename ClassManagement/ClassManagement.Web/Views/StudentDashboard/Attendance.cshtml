@model List<ClassManagement.Application.DTOs.AttendanceDto>
@{
    ViewData["Title"] = "Điểm danh";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <i class="fas fa-calendar-check me-2"></i>Lịch sử điểm danh
                </h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Danh sách điểm danh
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ngày</th>
                                        <th>Ca học</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model.OrderByDescending(a => a.Date))
                                    {
                                        <tr>
                                            <td>@attendance.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@attendance.TimeSlot</td>
                                            <td>
                                                @switch (attendance.Status)
                                                {
                                                    case ClassManagement.Domain.Enums.AttendanceStatus.Present:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check me-1"></i>Có mặt
                                                        </span>
                                                        break;
                                                    case ClassManagement.Domain.Enums.AttendanceStatus.Absent:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times me-1"></i>Vắng mặt
                                                        </span>
                                                        break;
                                                    case ClassManagement.Domain.Enums.AttendanceStatus.Late:
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-clock me-1"></i>Đi muộn
                                                        </span>
                                                        break;
                                                    case ClassManagement.Domain.Enums.AttendanceStatus.Excused:
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-user-check me-1"></i>Có phép
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Thống kê -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h4 class="mb-0">@Model.Count(a => a.Status == ClassManagement.Domain.Enums.AttendanceStatus.Present)</h4>
                                        <p class="mb-0">Có mặt</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h4 class="mb-0">@Model.Count(a => a.Status == ClassManagement.Domain.Enums.AttendanceStatus.Absent)</h4>
                                        <p class="mb-0">Vắng mặt</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h4 class="mb-0">@Model.Count(a => a.Status == ClassManagement.Domain.Enums.AttendanceStatus.Late)</h4>
                                        <p class="mb-0">Đi muộn</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h4 class="mb-0">@Model.Count(a => a.Status == ClassManagement.Domain.Enums.AttendanceStatus.Excused)</h4>
                                        <p class="mb-0">Có phép</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tỷ lệ điểm danh -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title mb-0">Tỷ lệ điểm danh</h6>
                                    </div>
                                    <div class="card-body">
                                        @{
                                            var totalDays = Model.Count;
                                            var presentDays = Model.Count(a => a.Status == ClassManagement.Domain.Enums.AttendanceStatus.Present);
                                            var attendanceRate = totalDays > 0 ? (double)presentDays / totalDays * 100 : 0;
                                        }
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                 style="width: @attendanceRate%" 
                                                 aria-valuenow="@attendanceRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @attendanceRate.ToString("F1")%
                                            </div>
                                        </div>
                                        <small class="text-muted mt-2 d-block">
                                            @presentDays trong tổng số @totalDays buổi học
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có dữ liệu điểm danh</h5>
                            <p class="text-muted">Dữ liệu điểm danh sẽ được cập nhật khi giáo viên thực hiện điểm danh.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại bảng điều khiển
            </a>
        </div>
    </div>
</div>


