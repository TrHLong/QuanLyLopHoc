@{
    ViewData["Title"] = "Test File Upload";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Test File Upload</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Chọn file để test upload</label>
                            <input type="file" name="file" class="form-control" accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Test Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


